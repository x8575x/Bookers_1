<div class="col-lg-7 offset-1">

  <div class="row">
    <h2>Books</h2>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <% books.each do |book| %>
      <tbody>
        <tr data-href="<% book_path(book.id) %>">
          <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
    <% end %>
  </table>

</div>
